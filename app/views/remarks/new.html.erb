<%= form_for [:retro, @remark] do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :retro_id %>
    <%= f.label :title, "Remark" %>
    <%= f.text_field :title %><br>

    <%= f.label :explanation, "Explanation" %>
    <%= f.text_field :explanation %><br>

    <%= f.label :connotation_id %>
    <%= f.collection_select(:connotation_id, Connotation.all, :id, :name, {:prompt => 'Select...'}) %><br>
    <%= f.submit "Save" %>
<% end %>
