<h3>Retros</h3>
<span><%= link_to 'Add a retro', new_retro_path %></span>
<div class="row">
  <div class="content span12">
  <br>
    <table class="table table-bordered table-striped">
      <th>Team</th>
      <th>Name</th>
      <th>Date</th>
      <th>State</th>
      <th>Voting allowed</th>
      <th>Edit</th>
      <th>Delete</th>
      <% @retros.each do |retro| %>
        <tr>
          <td><%= retro.try(:team_id) %></td>
          <td><%= link_to "#{retro.try(:name)}", retro_path(retro) %></td>
          <td class="date"><%= date_format(retro.try(:date)) %></td>
          <td><%= retro.try(:state) %></td>
          <td><%= retro.try(:voting_allowed) %></td>
          <td><%= link_to "Edit", edit_retro_path(retro) %></td>
          <td><%= link_to "Delete", retro_path(retro), :method => :delete, :class => "retro_delete" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
