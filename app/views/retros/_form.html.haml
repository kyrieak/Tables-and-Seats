= simple_form_for @retro do |f|
  - if @retro.errors.any?
    #error_explanation
      %h2= "#{pluralize(@retro.errors.count, "error")} prohibited this retro from being saved:"
      %ul
        - @retro.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  .actions
    = f.submit 'Save'
